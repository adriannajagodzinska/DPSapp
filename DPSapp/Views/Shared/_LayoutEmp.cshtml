<!DOCTYPE html>
<style>
    #tlo {
        background-color: whitesmoke;
    }
</style>
<style>
    #nav_bar {
        background-color: whitesmoke;
        border-color: black;
        color: black !important;
    }
    .navbar-brand {
        color:black;
    }
</style>
<html>
<head id="tlo">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/sonhlab-tile-buttons.css" type="text/css" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="tlo">
    <div class="navbar navbar-light navbar-inverse navbar-fixed-top bg-light" style="background-color:whitesmoke; color:black">
        <div class="container" style="color:black">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style=" color: black; font-family: Marker Felt">
                </button>
                @Html.ActionLink("Panel administracji", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand", title = "Naciśnięcie spowoduje powrót do panelu administracji" })
            </div>
            <div class="navbar-collapse collapse" style="color:black; float:right">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Wyloguj się", "Wyloguj", "Home", new { @class = "my-class", title = "Naciśnięcie spowoduje wylogowanie i powrót do strony głównej" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

