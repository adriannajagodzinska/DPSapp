<style>
    #usun {
        color: firebrick;
    }

    .my-class {
        color: black;
        font-family: Marker Felt;
    }

        .my-class:active {
            color: black;
        }

        .my-class:link {
            color: black;
        }

        .my-class:visited {
            color: black;
        }

        .my-class:hover {
            color: cadetblue;
        }
</style>
@model DPSapp.Models.Tag

@{
    ViewBag.Title = "DeleteTag";
    Layout = "~/Views/Shared/_LayoutEmp.cshtml";
}


<p class="error">@ViewBag.ErrorMessage</p>
<h3 id="usun">Czy na pewno chcesz usunąć znacznik?</h3>
<div>
    <h4>Tag</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TagName)
        </dd>

        <dt>
            Czy globalny:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsGlobal)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy znaczników", "Index",null, new { @class = "my-class", title = "Naciśnięcie spowoduje powrót do listy znaczników" })
        </div>
    }
</div>
