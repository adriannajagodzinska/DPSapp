<style>
    #usun {
        color: firebrick;
    }

    .my-class {
        color: black;
        font-family: Marker Felt;
    }

        .my-class:active {
            color: black;
        }

        .my-class:link {
            color: black;
        }

        .my-class:visited {
            color: black;
        }

        .my-class:hover {
            color: cadetblue;
        }
</style>
@model DPSapp.Models.Tag

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutEmp.cshtml";
}

<div class="jumbotron jumbotron-fluid" id="tlo">
    <div class="container" style="  background-color:whitesmoke">
        <h1 class="display-4" style=" font-size: 30px; text-align: center; background-color: white; font-family: Marker Felt; border: double">Edytuj Znacznik</h1>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TagId)

        <div class="form-group">
            @Html.LabelFor(model => model.TagName, "Nazwa znacznika", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color:white; color:black; border:double;" value="Zapisz" class="btn btn-default" />|
                @Html.ActionLink("Powrót do listy znaczników", "Index", null, new { @class = "my-class", title = "Naciśnięcie spowoduje powrót do listy znaczników" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
