@model DPSapp.Models.FamilySender
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="jumbotron jumbotron-fluid" style="background-image: linear-gradient(rgb(104 156 207), white)">
        <div class="container" style="  background-image: linear-gradient(rgb(104 156 207), white)">

            <h1 class="display-4" style="text-align:center ;font-family:Broadway">Wyślij wiadomość</h1>


        </div>
    </div>

    <h2></h2>
    @using (Html.BeginForm("Send", "Family", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Komunikat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Komunikat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Komunikat, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.file, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="file" required />
            </div>
        </div>
        <div>

            <input type="submit" value="Zapisz plik" />
            @ViewBag.Message
        </div>
    }
</center>
<div>
    @Html.ActionLink("Powrót", "Index")
</div>

