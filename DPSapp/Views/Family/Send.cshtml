@model DPSapp.Models.FamilySender
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="jumbotron jumbotron-fluid" id="tlo">
        <div class="container" style="  background-color:whitesmoke">

            <h1 class="display-4" style="text-align: center; background-color: white; font-family: Marker Felt; border: double">Wyślij ogłoszenie</h1>


        </div>
    </div>

    <h2></h2>


    @using (Html.BeginForm("Send", "Family", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="margin-top:50px; float:left">
            <div class="col-sm-6" style="width: 30rem"></div>
            <div class="col-sm-6 " style="width:50rem">

                <div class="card text-white bg-info text-center" style=" width: 50rem; padding: 4rem;
       background-color: white; border: double">

                    <div id="forma" class="card-body">
                        <h4 class="card-title text-capitalize text-center" style="        background-color: white;
        border: none;
        border-color: black;
        margin-bottom: 20px;
        font-family: Marker Felt">
                        </h4>
                        <form>
                            <div class="form-group text-left" style="font-family: Marker Felt; font-size:large">
                                <label>Komunikat: </label>
                                @*@Html.LabelFor(model => model.Komunikat, "Komunikat: ", htmlAttributes: new { @class = "control-label col-md-2" })*@
                                @Html.EditorFor(model => model.Komunikat, new { htmlAttributes = new { @class = "form-control", title = "Wprowadzona wiadomość tekstowa zostanie umieszczona na załączonym pliku" } })
                                @Html.ValidationMessageFor(model => model.Komunikat, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group text-left" style="font-family: Marker Felt; font-size:large">
                                @*@Html.LabelFor(model => model.file, "Plik:      ", htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <label>Plik:      </label>
                                <input type="file" name="file" required />
                                @*<div class="col-md-10">
                                        <input type="file" name="file" required />
                                    </div>*@
                            </div>

                           
                            <button type="submit" class="btn btn-primary" style="        margin-top: 20px;
        background-color: white;
        border-color: black;
        border: solid;
        border-radius: 30px;
        color: black;
        font-family: Marker Felt">
                                Dodaj ogłoszenie
                            </button>
                            <div>
                                @Html.ActionLink("Powrót do panelu rodziny", "Index", "Family", null, new { @class = "my-class", title = "Naciśnięcie spowoduje powrót do listy ogłoszeń" })
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }



