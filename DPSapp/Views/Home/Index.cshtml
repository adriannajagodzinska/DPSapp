@{
    ViewBag.Title = "Strona startowa";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Miejsce na nazwę</h1>
        <p class="lead">Miejsce na opis.</p>
    </div>
</div>

<div class="row" style="margin-top:50px">
    <div class="col-sm-6" style="width:15rem"></div>
    <div class="col-sm-6 " style="width:30rem">

        <div class="card text-white bg-info text-center" style="width: 30rem; padding: 2rem; height:30rem">

            <div class="card-body">
                <h4 class="card-title text-capitalize text-center" style="margin-bottom:20px">Logowanie użytkownika</h4>
                <form>
                    <div class="form-group text-left">
                        <label for="exampleInputLogin">Login</label>
                        <input type="text" class="form-control" id="exampleInputLogin" aria-describedby="emailHelp" placeholder="Wpisz login">

                    </div>
                    <div class="form-group text-left">
                        <label for="exampleInputPassword1">Hasło</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Wpisz hasło">
                    </div>

                    <button type="submit" class="btn btn-primary" style="margin-top:20px">Zaloguj</button>
                </form>
            </div>
        </div>

    </div>
    <div class="col-sm-6" style="width:20rem"></div>
    <div class="col-sm-6" style="width:30rem">
        <div class="card text-white bg-info text-center" style="width: 30rem; padding: 2rem; height: 30rem">
            <div class="card-body">
                <h4 class="card-title text-capitalize" style="margin-bottom:20px">Galeria dla pensjonariuszy</h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-images" viewBox="0 0 16 16"  alignment-baseline="center">
                    <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                    <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z" />
                </svg>
                <p class="card-text text-left" style="margin-top:20px; margin-bottom:20px">Wejście do galerii zdjęć oraz wiadomości dla pensjonariuszy z podziałem na pokoje. </p>
                <a href=@Url.Action("Index","Rooms") class="btn btn-primary">Wybór pokoju</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6" style="width:5%"></div>
</div>
