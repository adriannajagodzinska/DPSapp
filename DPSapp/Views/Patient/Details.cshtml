@model DPSapp.Models.Patient
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutEmp.cshtml";
}

<div class="row" style="margin-top:50px; float:left">
    <div class="col-sm-6" style="width: 30rem"></div>
    <div class="col-sm-6 " style="width:50rem">

        <div class="card text-white bg-info text-center" style=" width: 50rem; padding: 4rem; height: 50rem;
       background-color: white; border: double">

            <div id="forma" class="card-body">
                <h4 class="card-title text-capitalize text-center" style="        background-color: white;
        border: none;
        border-color: black;
        margin-bottom: 20px;
        font-family: Marker Felt">
                </h4>
                <form>
                    <div class="form-group text-left" style="font-family: Marker Felt; font-size:large">
                        <label>Pensjonariusz: </label>
                        @Html.DisplayFor(model => Model.PatientName) @Html.DisplayFor(model => Model.PatientSurname)
                    </div>
                    <div class="form-group text-left" style="font-family: Marker Felt; font-size:large">
                        <label>Przypisane znaczniki: </label>
                        <br />
                        <table class="table" id="tabela">

                            @foreach (var item in Model.Tags)
                            {
                                <tr>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.TagName)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </form>
            </div>
        </div>
