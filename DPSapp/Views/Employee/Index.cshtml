        <div class="container" style="  background-color:whitesmoke">

            <h1 class="display-4" style="        text-align: center;
        font-family: Marker Felt;
        background-color:white;
        border: double">
                Użytkownicy
            </h1>


        </div>
        <div>
            <table class="table table-hover" id="tabelka" style="background-color: white; color:black">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.RecipeName)*@
                        @Html.ActionLink(" ", "Index", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Date)*@
                        @Html.ActionLink("Login użytkownika", "Index", new { @class = "my-class" }, new { title = "Naciśnięcie spowoduje posortwanie danych według tabeli", sortOrder = ViewBag.LoginSortParm })
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Date)*@
                        @Html.ActionLink("Hasło użytkownika", "Index", new { @class = "my-class", sortOrder = ViewBag.PasswordSortParm }, new { title = "Naciśnięcie spowoduje posortwanie danych według tabeli" })
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Date)*@
                        @Html.ActionLink("Przypisany pacjent", "Index", new { @class = "my-class", sortOrder = ViewBag.PatientSortParm }, new { title = "Naciśnięcie spowoduje posortwanie danych według tabeli" })
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="Search">
                        <td>
                            @item.UserId
                        </td>
                        <td>

                            @item.Login


                        </td>
                        <td>

                            @item.Password
                        </td>
                        <td>
                            @if (item.PatientID == 0)
                            {
                                <h5> Brak (Konto Pracownika)</h5>
                            }
                            else
                            {
                                <h5>@item.PatientID</h5>

                            }

                        </td>

                    </tr>
                }

            </table>

        </div>


