@model DPSapp.Models.MessageEditor

@{
    ViewBag.Title = "EditMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditMessage</h2>

@using (Html.BeginForm("EditMessage", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.message.MessageId)

        <div class="form-group">
            @Html.LabelFor(model => model.message.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-group text-left" style="font-family: Marker Felt; font-size:large">
                    @*@Html.LabelFor(model => model.file, "Plik:      ", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label>Plik:      </label>
                    <input type="file" name="file" required />
                   
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.message.MessageText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.message.MessageText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.message.MessageText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.message.IsAnnouncement, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.message.IsAnnouncement)
                    @Html.ValidationMessageFor(model => model.message.IsAnnouncement, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
