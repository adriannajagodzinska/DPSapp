@model DPSapp.Models.EmployeeSender
@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron jumbotron-fluid" style="background-image: linear-gradient(rgb(104 156 207), white)">
    <div class="container" style="  background-image: linear-gradient(rgb(104 156 207), white)">

        <h1 class="display-4" style="text-align:center ;font-family:Broadway">Wyślij ogłoszenie</h1>


    </div>
</div>


<center>

    @using (Html.BeginForm("Send", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

    <div class="form-horizontal">
        <hr />
        <div class="form-group ">
            @Html.LabelFor(model => model.Komunikat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Komunikat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Komunikat, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.file, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="file" required />
            </div>
        </div>

        <div>

            
            @ViewBag.Message
        </div>
        <h3> Wybierz tagi</h3>
        @foreach (var item in Model.AvailableListOfTags)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox"
                           name="SelectedTags"
                           value="@item.Value"
                           @if (Model.SelectedTags.Contains(item.Value)) 
                           { <text> checked </text> } /> @item.Value 
                    </label>
                
                </div>
            @*@Html.CheckBoxFor(m=>Model.SelectedTags[])*@

        }
        <hr />
        <hr />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Dodaj ogłoszenie" />
        </div>
    </div>


        




        }

</center>
    <div>
        @Html.ActionLink("Powrót", "Index")
    </div>

